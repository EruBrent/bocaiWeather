<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/WeatherModule"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/four_lab"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风速"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/third_divider"
        style="@style/line"
        android:layout_below="@+id/four_lab"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/blade"
        android:src="@drawable/blade_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/Wind_velocity"/>
    <ImageView
        android:id="@+id/pole"
        android:src="@drawable/smallpole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/Wind_velocity"
        android:layout_toEndOf="@+id/four_lab"/>
<TextView
    android:id="@+id/Wind_velocity"
    android:text="风速：40km/h"
    android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/blade"
    android:layout_centerHorizontal="true"/>
</RelativeLayout>